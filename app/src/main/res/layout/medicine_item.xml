<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:weightSum="2"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_medicine"
            android:src="@drawable/medicine1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="90dp" />I



        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/text_name"
                android:text="金嗓子喉片"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/text_description"
                android:textSize="10dp"
                android:textColor="#D3D3D3"
                android:text="适用于改善急性咽炎所致的咽喉肿痛，干燥灼热，声音嘶哑"
                android:layout_width="fill_parent"
                android:layout_height="30dp" />



            <ImageView
                android:id="@+id/image_star"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:src="@drawable/stars"
                />



        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/sell_item_below"
        android:weightSum="2"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="@dimen/sell_item_below" />I



        <LinearLayout
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="@dimen/sell_item_below"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sell_item_below"
                android:orientation="horizontal">

                <TextView
                    android:text="¥6.5"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:id="@+id/text_price"
                    android:textColor="#FF4500"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" />

                <ImageView
                    android:src="@drawable/add_to_car"
                    android:layout_marginLeft="115dp"
                    android:layout_gravity="center"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />



            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>